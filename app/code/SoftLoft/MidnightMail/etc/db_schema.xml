<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_connection_logs" resource="default" engine="innodb" comment="Promotions">
        <column xsi:type="int" name="log_id" unsigned="true" nullable="false" identity="true"
                comment="Log identifier"/>
        <column xsi:type="int" name="customer_id" unsigned="true" nullable="false" identity="false" padding="10"
                comment="User ID"/>
        <column xsi:type="datetime" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created at"/>
        <column xsi:type="datetime" name="updated_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created at"/>
        <column xsi:type="text" name="customer_ip" nullable="true"  comment="Customer Ip"/>
        <column xsi:type="int" name="mail_send" nullable="true" default="0"  comment="Mail send/unsend"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="log_id"/>
        </constraint>
        <constraint xsi:type="foreign"
                    referenceId="CUSTOMER_LOG_ENTITY_ID_CUSTOMER_LOG_ENTITY_ID"
                    table="customer_connection_logs"
                    column="customer_id"
                    referenceTable="customer_entity"
                    referenceColumn="entity_id"
                    onDelete="CASCADE"/>
    </table>
</schema>
