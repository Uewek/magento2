<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                product_likes_listing.product_likes_listing_data_source
            </item>
            <item name="deps" xsi:type="string">product_likes_listing.product_likes_listing_data_source
            </item>
        </item>
        <item name="spinner" xsi:type="string">spinner_columns</item>
    </argument>
    <dataSource name="product_likes_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Study\ProductLikes\Ui\DataProvider\ProductLikeListingDataProvider
            </argument>
            <argument name="name" xsi:type="string">product_likes_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">like_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">like_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>
    <columns name="spinner_columns">
        <column name="productName" class="Study\ProductLikes\Ui\Component\Listing\Column\ProductColumn" >
            <settings>
                <filter>text</filter>
                <sortable>true</sortable>
                <label translate="true">Product</label>
            </settings>
        </column>
        <column name="numberOfLikes" class="Study\ProductLikes\Ui\Component\Listing\Column\ProductColumn" >
            <settings>
                <filter>text</filter>
                <sortable>true</sortable>
                <label translate="true">Number of Likes</label>
            </settings>
        </column>
        <actionsColumn name="product_url" class="Study\ProductLikes\Ui\Component\Listing\Column\ProductColumn">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="filter" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Product link</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
</listing>
