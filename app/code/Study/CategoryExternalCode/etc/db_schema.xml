<!--    Создати екстенш атрибут для категорії.-->
<!--    1. Кастомер код category_external_code-->
<!--    2. Значення мають зберігатись в окремій таблиці: category_external_code_attribute-->
<!--    3. Має бути поле в адмінці сторінці створення категорії де це поле буде відображатись і його можна міняти-->
<!--    4. На сторінці категорії цей код має отображатись після категорі тайтла-->
<!--    5. Создати консольну команду яка буде создавати файл в папці var/-->
<!--    6. Імя файла category_codes_дата_створення.txt-->
<!--    7. У файл мають записатись всі категорії у яких значення цього кода не пусте у форматі-->
<!--    category_name => category_code-->
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="category_external_code_attribute" resource="default" engine="innodb" comment="Promotions">
        <column xsi:type="int" name="category_external_code_id" nullable="false" padding="15" identity="true"
                comment="Category attribute ID"/>
        <column xsi:type="text" name="category_external_code" nullable="true" comment="Category attribute value"/>
        <column xsi:type="int" name="category_id" nullable="false" comment="Category Id" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="category_external_code_id"/>
        </constraint>
    </table>
</schema>
