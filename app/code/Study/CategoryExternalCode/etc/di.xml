<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Study\CategoryExternalCode\Ui\DataProvider\Modifier\Pool"
                 type="Magento\Ui\DataProvider\Modifier\Pool">
        <arguments>
            <argument name="modifiers" xsi:type="array">
                <item name="external_attribute_modifier" xsi:type="array">
                    <item name="class" xsi:type="string">
                        Study\CategoryExternalCode\Ui\DataProvider\Modifier\ExternalAttribute</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                </item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Catalog\Model\Category\DataProvider">
        <arguments>
            <argument name="pool" xsi:type="object">
                Study\CategoryExternalCode\Ui\DataProvider\Modifier\Pool</argument>
        </arguments>
    </type>
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="external:maketxt" xsi:type="object">
                    Study\CategoryExternalCode\Console\MakeExternalCodeTxt</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Api\CategoryRepositoryInterface">
        <plugin name="category_repository_plugin"
                type="Study\CategoryExternalCode\Plugin\CategoryRepositoryInterface"/>
    </type>
    <preference for="Study\CategoryExternalAttribute\Api\CategoryAttributeModelInterface"
                type="Study\CategoryExternalAttribute\Model\CategoryAttributeModel" />
    <preference for="Study\CategoryExternalAttribute\Api\Data\CategoryExternalSearchResultInterface"
                type="Magento\Framework\Api\SearchResults" />
</config>
